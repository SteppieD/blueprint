# Copy this file to .env.local and fill in your values

# AI Services
# Option 1: OpenRouter (supports multiple models)
OPENROUTER_API_KEY=sk-or-v1-xxx

# Option 2: Direct Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# Redis (for job queue and caching)
REDIS_URL=redis://localhost:6379

# Storage (optional - for large PDF storage)
AWS_S3_BUCKET=blueprint-uploads
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1

# Optional: Use local storage instead of S3
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=/tmp/blueprint-uploads

# Job Processing
PROCESSING_TIMEOUT=300000 # 5 minutes
MAX_FILE_SIZE=52428800 # 50MB

# Price Scraping
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser # For production
PRICE_CACHE_TTL=3600 # 1 hour

# Optional: Supplier APIs (if available)
RONA_API_KEY=xxx
HOME_DEPOT_API_KEY=xxx